{
	"plugins": ["react"],
	"parser": "@babel/eslint-parser",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true,
		"mocha": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"rules": {
		"semi": [2, "always"],
		"indent": ["error", "tab"],
		"object-curly-spacing": ["error", "always"],
		"max-len": ["error", { "code": 180 }],
		"no-multi-spaces": "error"
	},
	"settings": {
		"react": {
			"version": "17.0.2"
		}
	}
}
